# Launch the terminal.
super + Return
	alacritty

# Open the application launcher.
super + @space
	rofi -show-icons -show drun

# Reload the hotkey daemon.
super + Escape
	pkill -USR1 -x sxhkd

# Quit or restart the tiling manager.
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill the opened window.
super + {_,shift + }x
	bspc node -{c,k}

# Swap the current node and the biggest window.
super + g
	bspc node -s biggest.window

# Set the window state.
super + {t,f}
	bspc node -t {tiled,fullscreen}

# Set the node flags.
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Focus the node in the given direction.
super + {Left,Down,Up,Right}
  bspc node -f {west,south,north,east}

# Swap the node in the given direction.
super + shift + {Left,Down,Up,Right}
        dir={west,south,north,east}; \
        bspc node -s "$dir.local" --follow \
            || bspc node -m "$dir" --follow

# Take a screenshot
super + s
  maim -s "/home/jack/pictures/screenshots/$(cat /dev/urandom | tr -cd 'a-f0-9' | head -c 8).png"

# Mute and unmute the audio.
super + Home
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# Raise the volume.
super + Prior
 pactl set-sink-mute @DEFAULT_SINK@ false && pactl set-sink-volume @DEFAULT_SINK@ +5% 

# Lower the volume.
super + Next
  pactl set-sink-mute @DEFAULT_SINK@ false && pactl set-sink-volume @DEFAULT_SINK@ -5%
