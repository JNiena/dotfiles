# Setup the package manager.
sudo pacman -S --needed git base-devel
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ..
rm -rf yay
yay -Y --gendb
yay -Syu --devel
yay -Y --devel --save

# Setup drivers.
yay -Syu xf86-video-amdgpu mesa

# Setup common utilities.
yay -Syu git zip unzip

# Setup the display server.
yay -Syu xorg-server xorg-xinit xorg-xsetroot xorg-xrandr

# Setup the compositor, tiling window manager, and hotkey daemon.
yay -Syu picom bspwm sxhkd

# Setup audio.
yay -Syu pulseaudio

# Setup the terminal.
yay -Syu alacritty

# Setup the wallpaper, application launcher, and status bar.
yay -Syu feh rofi polybar

# Setup fonts.
yay -Syu ttf-jetbrains-mono-nerd

# Setup the web browser.
yay -Syu firefox
