#!/bin/sh

# Set the refresh rates and resolutions.
xrandr --output DisplayPort-0 --mode 2560x1440 --rate 143.86 --primary &
xrandr --output HDMI-A-0 --mode 2560x1440 --rate 144 &

# Wait for the monitors to be ready.
sleep 5

# Start the status bar.
polybar main &

# Set the wallpaper.
feh --bg-scale ~/pictures/wallpapers/wallpaper.png &

# Set the cursor.
xsetroot -cursor_name left_ptr &

# Start the compositor.
picom --config ~/.config/picom/picom.conf &

# Start the tiling manager.
exec bspwm
