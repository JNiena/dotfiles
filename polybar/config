[colors]
alpha = #00000000
dark-gray = #24283b
light-gray = #a9b1d6
red = #ff7a93
green = #b9f27c
yellow = #ff9e64
blue = #7da6ff
cyan = #0db9d7
background = #1a1b26
foreground = #a9b1d6
background-alt = ${colors.dark-gray}
foreground-alt = ${colors.light-gray}
primary = ${colors.blue}
alert = ${colors.yellow}

[bar/main]
monitor = ${env:DisplayPort-0:}
width = 100%:-48
height = 30
radius = 0
line-size = 3
fixed-center = true
override-redirect = false
wm-restack = bspwm
background = ${colors.background}
foreground = ${colors.foreground}
offset-x = 24
offset-y = 12
border-size = 0
border-color = ${colors.alpha}
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = JetBrainsMono Nerd Font:pixelsize=12;3
font-1 = JetBrainsMono Nerd Font:pixelsize=10;3
modules-left = bspwm
modules-center = time
modules-right = pulseaudio eth date
cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm
ws-icon-default-font = 2
ws-icon-default = ﱢ
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.primary}
label-focused-padding = 1
label-focused-font = 2
label-occupied = %icon%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}
label-occupied-font = 2
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
label-urgent-font = 2
label-empty = %icon%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.dark-gray}
label-empty-padding = 1
label-empty-font = 2

[module/eth]
type = internal/network
interval = 5
interface = enp4s0
label-connected = %local_ip%
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.primary}

[module/time]
type = internal/date
interval = 5
time = %I:%M
label = %time%
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 5
date = "%m/%d"
label = %date%
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/pulseaudio]
type = internal/pulseaudio
bar-volume-empty-foreground = ${colors.foreground-alt}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = MUTE
label-muted-foreground = ${colors.foreground-alt}
format-volume = <label-volume>
format-volume-prefix = "墳 "
format-muted-prefix = "婢 "
format-volume-prefix-foreground = ${colors.primary}
format-muted-prefix-foreground = ${colors.green}

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
